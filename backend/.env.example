# ── Server ──────────────────────────────────────────
PORT=4000
NODE_ENV=development

# ── MongoDB ─────────────────────────────────────────
# Local:   mongodb://localhost:27017/rag_tracker
# Atlas:   mongodb+srv://<user>:<pass>@cluster.mongodb.net/rag_tracker
MONGO_URI=mongodb://localhost:27017/rag_tracker

# ── JWT ─────────────────────────────────────────────
JWT_SECRET=change_this_to_a_long_random_secret_string
JWT_EXPIRES_IN=8h

# ── Email (SMTP) ─────────────────────────────────────
# Use any SMTP provider: SendGrid, Mailgun, SES, Gmail
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
EMAIL_FROM="RAG Tracker <no-reply@yourcompany.com>"

# ── Frontend URL (for CORS) ──────────────────────────
FRONTEND_URL=http://localhost:5173

# ── Data Retention ───────────────────────────────────
# How many months of weekly reports to retain (default: 6)
DATA_RETENTION_MONTHS=6
